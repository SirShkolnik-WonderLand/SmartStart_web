# SmartStart Platform - Environment Variables for Render.com Free Tier
# Copy this file to .env.local for local development
# For production, set these in Render.com dashboard

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/smartstart"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET="your-super-secret-jwt-key-here"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=3001
NODE_ENV="development"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# =============================================================================
# SERVICE FLAGS (Free Tier Optimizations)
# =============================================================================
# Enable/disable features based on free tier constraints
WORKER_ENABLED="true"      # Background job processing
STORAGE_ENABLED="true"     # File upload/storage
MONITOR_ENABLED="true"     # Health monitoring

# =============================================================================
# AWS S3 CONFIGURATION (Optional for Free Tier)
# =============================================================================
# Leave empty if not using S3 (files will be stored locally)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET="smartstart-files"
AWS_REGION="us-east-1"

# =============================================================================
# EMAIL CONFIGURATION (Optional for Free Tier)
# =============================================================================
# Leave empty if not using email features
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""

# =============================================================================
# REDIS CONFIGURATION (Optional for Free Tier)
# =============================================================================
# Leave empty if not using Redis (worker features will be disabled)
REDIS_URL=""
REDIS_HOST="localhost"
REDIS_PORT="6379"

# =============================================================================
# FREE TIER OPTIMIZATIONS
# =============================================================================
# These settings help optimize for Render.com free tier constraints
MAX_INSTANCES=1
MIN_INSTANCES=0
HEALTH_CHECK_INTERVAL=300000  # 5 minutes
