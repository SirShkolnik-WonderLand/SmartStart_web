# Server Configuration
NODE_ENV=development
PORT=4000
HOST=localhost

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/analytics_hub
# Or SQLite for simple start:
# DATABASE_URL=sqlite://./analytics.db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin User (default credentials)
ADMIN_EMAIL=udi.shkolnik@alicesolutionsgroup.com
ADMIN_PASSWORD=ChangeThisPassword123!

# CORS (allow stellar-den to send events)
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173,https://alicesolutionsgroup.com,https://www.alicesolutionsgroup.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (for reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=analytics@alicesolutionsgroup.com

# Google Search Console API (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Render Deployment
RENDER_EXTERNAL_URL=https://analytics.alicesolutionsgroup.com
